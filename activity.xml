<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#2E2E2E"
        android:layout_margin="2dp"
        android:text="0"
        android:textSize="60dp"
        android:gravity="end"
        android:textColor="#B9C4C7">
    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="C"
                android:textSize="70dp"
                android:textColor="#F05E16"
                android:layout_margin="1dp"
                android:background="@drawable/square_button"></Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="%"
                android:textSize="70dp"
                android:textColor="@color/white"
                android:layout_margin="1dp"
                android:background="@drawable/square_button"></Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="+/-"
                android:textSize="60dp"
                android:textColor="@color/white"
                android:layout_margin="1dp"
                android:background="@drawable/square_button"></Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="70dp"
                android:textColor="@color/white"
                android:layout_margin="1dp"
                android:background="@drawable/square_button"></Button>


        </LinearLayout>
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
           <Button
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="7"
               android:textSize="70dp"
               android:textColor="@color/white"
               android:layout_margin="1dp"

               android:background="@drawable/square_button2"></Button>
           <Button
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="8"
               android:textSize="70dp"
               android:textColor="@color/white"
               android:layout_margin="1dp"
               android:background="@drawable/square_button2"></Button>
           <Button
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="9"
               android:textSize="70dp"
               android:textColor="@color/white"
               android:layout_margin="1dp"
               android:background="@drawable/square_button2"></Button>
           <Button
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="*"
               android:textSize="70dp"
               android:textColor="@color/white"
               android:layout_margin="1dp"
               android:background="@drawable/square_button"></Button>

       </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
         <Button
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             android:text="4"
             android:textSize="70dp"
             android:textColor="@color/white"
             android:layout_margin="1dp"

             android:background="@drawable/square_button2"></Button>
         <Button
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             android:text="5"
             android:textSize="70dp"
             android:textColor="@color/white"
             android:layout_margin="1dp"
             android:background="@drawable/square_button2"></Button>
         <Button
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             android:text="6"
             android:textSize="70dp"
             android:textColor="@color/white"
             android:layout_margin="1dp"
             android:background="@drawable/square_button2"></Button>
         <Button
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             android:text="-"
             android:textSize="70dp"
             android:textColor="@color/white"
             android:layout_margin="1dp"
             android:background="@drawable/square_button"></Button>


     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="70dp"
            android:textColor="@color/white"
            android:layout_margin="1dp"

            android:background="@drawable/square_button2"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="70dp"
            android:textColor="@color/white"
            android:layout_margin="1dp"
            android:background="@drawable/square_button2"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="70dp"
            android:textColor="@color/white"
            android:layout_margin="1dp"
            android:background="@drawable/square_button2"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="70dp"
            android:textColor="@color/white"
            android:layout_margin="1dp"
            android:background="@drawable/square_button"></Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="70dp"
            android:textColor="@color/white"
            android:layout_margin="1dp"

            android:background="@drawable/square_button2"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="70dp"
            android:textColor="@color/white"
            android:layout_margin="1dp"
            android:background="@drawable/square_button2"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="<"
            android:textSize="60dp"
            android:textColor="@color/white"
            android:layout_margin="1dp"
            android:background="@drawable/square_button2"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="70dp"
            android:textColor="@color/white"
            android:layout_margin="1dp"
            android:background="@drawable/square_button"></Button>

    </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>